<!DOCTYPE html>
<html lang="en">
<head><title>Manage Color</title></head>
<body class="animsition">
        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <%- include('header'); %>
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
									<div class="card-header">
										<h4>Manage Colors</h4>
									</div>
									<div class="card-body">
										<div class="custom-tab">
											<nav>
												<div class="nav nav-tabs" id="nav-tab" role="tablist">
													<a class="nav-item nav-link active" id="custom-nav-home-tab" data-toggle="tab" href="#custom-nav-home" role="tab" aria-controls="custom-nav-home"
													 aria-selected="true">Manage Colors</a>
												</div>
											</nav>
											<div class="tab-content pl-3 pt-2" id="nav-tabContent">
												<div class="tab-pane fade show active" id="custom-nav-home" role="tabpanel" aria-labelledby="custom-nav-home-tab">
													<form id="form" action="/addColor" class="form-horizontal" method="post">
                                                        <div class="panel-body">
                                                            <br/>
                                                            <div class="form-group row">
                                                                <div class="col-sm-1"></div>
                                                                <label class="col-sm-3 align-center" style="padding:5px;">Enter Color Name<span class="error">*</span></label>
                                                                <div class="col-sm-3">
                                                                    <input type="text" name="colorName" class="form-control w-100 h-100" placeholder="Enter Color Name" required/>
                                                                </div>
                                                                <div class="col-sm-3">
                                                                    <button class="btn btn-primary">Add Color</button>
                                                                    <button class="btn btn-danger" type="reset" class="btn btn-default">Reset</button>
                                                                </div>
                                                            </div>    
                                                        </div>
                                                    </form>
                                                    <br/>
                                                    <div class="col-sm-9 margin-center">
                                                        <table class="table align-center" align="center">
                                                            <thead>
                                                                <tr>
                                                                    <th>Colors</th>
                                                                    <th></th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <%colors.forEach(function(color){%>
                            

                                                    
                                                                
                                                                <tr>
                                                                    <td>
                                                                        <!--<div class="progress">
                                                                            <div class="progress-bar" role="progressbar" style="width:100%;background-color: orange;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                                                        </div>-->
                                                                        <%=color.colorName%>
                                                                    </td>
                                                                    <td>
                                                                        <div class="table-data-feature w-25">
                                                                            <button class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                                                                <i class="zmdi zmdi-delete"></i>
                                                                            </button>
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                <%})%>
                                                            </tbody>
                                                        </table>
                                                    </div>
					                        	</div>	
					                        </div>
				                        </div>						
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

    <!-- Jquery JS-->
    <script src="vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="vendor/slick/slick.min.js">
    </script>
    <script src="vendor/wow/wow.min.js"></script>
    <script src="vendor/animsition/animsition.min.js"></script>
    <script src="vendor/bootstrap-progressbar/bootstrap-progressbar.min.js">
    </script>
    <script src="vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="vendor/counter-up/jquery.counterup.min.js">
    </script>
    <script src="vendor/circle-progress/circle-progress.min.js"></script>
    <script src="vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="vendor/select2/select2.min.js">
    </script>

    <!-- Main JS-->
    <script src="js/main.js"></script>
    <script src="js/custom.js"></script>
    <script src="js/validation.js"></script>
    <script src="js/form-validate.js"></script>
    
    
    	<script>
		$(document).ready(function(){
			$('.all-menu').removeClass('active');
			$('.manageColor').addClass('active');
		});
		
	</script>
    

</body>

</html>
<!-- end document-->
